@{
    ViewData["Title"] = "Live Timing";
}

<div class="container mt-4">
    <h2 class="text-center mb-3">🏁 Live Резултати</h2>
    <table id="resultsTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Участник</th>
                <th>Събитие</th>
                <th>Време</th>
                <th>Финален?</th>
            </tr>
        </thead>
        <tbody id="resultsBody">
        </tbody>
    </table>
</div>

<!-- SignalR -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/timingHub")
        .build();

    connection.on("NewResult", (data) => {
        const row = `
            <tr>
                <td>${data.participantId}</td>
                <td>${data.eventId}</td>
                <td>${data.lapTime}</td>
                <td>${data.isFinal ? "✅" : "❌"}</td>
            </tr>
        `;
        document.getElementById("resultsBody").innerHTML += row;
    });

    async function start() {
        try {
            await connection.start();
            console.log("Свързано с TimingHub ✅");
        } catch (err) {
            console.log(err);
            setTimeout(start, 3000);
        }
    }

    connection.onclose(async () => {
        await start();
    });

    start();
</script>
